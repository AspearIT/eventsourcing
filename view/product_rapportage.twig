{% extends 'main.twig' %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-6">
                <b>
                    Product
                </b>
            </div>
            <div class="col-6">
                <b>
                    Bedrag
                </b>
            </div>
        </div>
        {% for product in products %}
            <div class="row">
                <div class="col-6">
                    {{ product.productType }}
                </div>
                <div class="col-6">
                    {{ product.totaalMaandBedrag }}
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}